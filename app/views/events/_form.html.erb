<%= form_with model: @event, local: true do |f| %>

    <div class="form-group">
        <%= f.label :title, class: "form_label" %>
        <%= f.text_field :title, class: "form-control", placeholder: 'Title'   %>
    </div>

    <div class="form-group">
        <%= f.label :description, class: "form_label" %>
        <%= f.text_area :description, class: "form-control"   %>
    </div>

    <div class="form-group ">
        <%= f.label :date, class: "form_label" %>
        <%= f.datetime_select :date, class: "form-control datepicker"  %>
    </div>

    <div class="form-group">
        <%= f.label :location, class: "form_label" %>
        <%= f.text_field :location, class: "form-control"  %>
    </div>

    <div class="form-group">
        <%= f.submit 'Create Event', class: 'btn btn-primary' %>
    </div>

<% end %>