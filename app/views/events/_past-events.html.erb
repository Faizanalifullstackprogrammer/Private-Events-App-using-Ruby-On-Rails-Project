<div class="grid-post">
    <% @past_events.each do |e| %>
        <div class="card box bg-light">
            <div class="card-body">
                <div class="card-title">
                    <%= link_to e.title, event_path(e), class: 'h4 text-uppercase text-decoration-none post-title mb-0' %>
                <small>
                    <%= e.date %>
                </small>
                </div>
                <div class="card-text post-body">
                    <%= e.description %>
                </div>
            </div>
        </div>
    <% end %>
</div>